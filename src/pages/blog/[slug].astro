import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Generate static paths for all blog posts
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog', ({ data }: any) => {
    return data.draft !== true;
  });
  
  return blogEntries.map((entry: CollectionEntry<'blog'>) => ({
    params: { slug: entry.slug },
    props: { entry }
  }));
}

// Get the post entry from props
const { entry } = Astro.props as { entry: CollectionEntry<'blog'> };

// Render the markdown content
const { Content } = await entry.render();

// Format the post data
const post = {
  title: entry.data.title,
  description: entry.data.description || entry.data.title,
  date: entry.data.date.toISOString().split('T')[0],
  dateISO: entry.data.date.toISOString(),
  author: entry.data.author,
  category: entry.data.category,
  readTime: entry.data.readTime,
  image: entry.data.image,
  slug: entry.slug,
  tags: entry.data.tags || [],
};

// Get site URL
const siteUrl = Astro.site || 'https://tech.dicka.web.id';
const postUrl = new URL(`/blog/${post.slug}`, siteUrl).toString();
const imageUrl = post.image.startsWith('http') ? post.image : new URL(post.image, siteUrl).toString();

// Get related posts with improved algorithm
const allBlogPosts = await getCollection('blog', ({ data }: any) => {
  return data.draft !== true;
});

// Get current post tags
const currentTags = entry.data.tags || [];
const currentCategory = entry.data.category;

// Calculate relevance score for each post
const postsWithScore = allBlogPosts
  .filter((postEntry: CollectionEntry<'blog'>) => postEntry.slug !== entry.slug)
  .map((postEntry: CollectionEntry<'blog'>) => {
    let score = 0;
    const postTags = postEntry.data.tags || [];
    
    // Same category = high priority
    if (postEntry.data.category === currentCategory) {
      score += 10;
    }
    
    // Matching tags = medium priority
    const matchingTags = postTags.filter((tag: string) => 
      currentTags.some((currentTag: string) => 
        currentTag.toLowerCase() === tag.toLowerCase()
      )
    );
    score += matchingTags.length * 5;
    
    // Recency bonus (newer posts get slight boost)
    const daysSincePublished = (Date.now() - postEntry.data.date.getTime()) / (1000 * 60 * 60 * 24);
    if (daysSincePublished < 30) {
      score += 2;
    } else if (daysSincePublished < 90) {
      score += 1;
    }
    
    return { post: postEntry, score };
  })
  .sort((a, b) => b.score - a.score)
  .slice(0, 3);

const relatedPosts = postsWithScore.map(item => item.post);
